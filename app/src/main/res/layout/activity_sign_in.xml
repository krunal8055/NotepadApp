<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/black"
    tools:context=".SignInActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/phone_icon"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/phoneLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            android:text="Phone Number"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            android:text="Please Enter Your Phone Number to Sign in."
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/phone_no_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="+1XXXXXXXXXX"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:inputType="phone"
            android:background="@color/white"/>

        <Button
            android:id="@+id/getOtp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20px"
            android:padding="20px"
            android:backgroundTint="@color/color2"
            android:text="Click to Get OTP" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/otpLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            android:text="OTP"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/otp_sent_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            android:text="Please Enter Verification code that you receive on you phone number "
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/otp_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Please enter OTP"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:inputType="phone"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/resend_otp_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            android:text="Did'nt get OTP? Resend OTP"
            android:textSize="12dp"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20px"
            android:backgroundTint="@color/color5"
            android:padding="20px"
            android:text="Verify and Login" />

    </LinearLayout>
</LinearLayout>